{
    "compilerOptions": {
        "outDir": "./dist",
        "target": "es5",
        "module": "es6",
        "jsx": "react",
        "noImplicitAny": true,
        "allowSyntheticDefaultImports": true,
        "moduleResolution": "node",
        "preserveConstEnums": true,
        "removeComments": true,
        "sourceMap": true,
        "typeRoots": [
            "./node_modules/@types"
        ],
        "baseUrl": "./src",
        "paths": {
            "/modules": [
                "modules"
            ],
            "/ui": [
                "ui"
            ],
            "/shared/*": [
                "shared/*"
            ],
            "/styles/*": [
                "styles/*"
            ],
            "/images/*": [
                "ui/images/*"
            ],
            "/utiils": [
                "utils"
            ],
            "/utiils/*": [
                "utils/*"
            ]
        }
    },
    "include": [
        "./src/",
        "declarations.d.ts"
    ]
}